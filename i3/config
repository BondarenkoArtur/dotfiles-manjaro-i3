###
# Constants
### 

  # Mod keys (Mod1=<Alt>, Mod4=<Super>)
  set $mod Mod4

  # Colors
  set $black     #000000
  set $bg        #1f2126
  set $bgtrans   #1f2126CC
  set $bglight   #404452
  set $fg        #5F6B85
  set $fglight   #ABB2BF
